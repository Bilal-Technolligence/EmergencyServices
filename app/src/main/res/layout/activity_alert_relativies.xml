<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlertRelativiesActivity">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/layout_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/one"
            app:boxStrokeColor="@color/colorRed"
            android:textColor="@color/colorBlack"
            android:paddingTop="10dp"
            android:text="Uncle Mustafa"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            app:boxStrokeColor="@color/colorRed"
            android:textColor="@color/colorBlack"
            android:text="Khala Maqoola"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:text="Arsalan Hayat"
            app:boxStrokeColor="@color/colorRed"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            app:boxStrokeColor="@color/colorRed"
            android:textColor="@color/colorBlack"
            android:text="Unknown Chachu"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_below"
        android:layout_below="@+id/layout_friends"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="I am going to Dubai I need your help"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/layout_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Button
            android:id="@+id/btnRelatives"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round"
            android:text="Send Message"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/White"
            android:textSize="16sp"></Button>

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_alignParentBottom="true"
        app:menu="@menu/navigation"/>

</RelativeLayout>